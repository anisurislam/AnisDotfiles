# Spawn terminal
super + Return
        kitty

# Brave
super + b
        brave --enable-features=AcceleratedVideoDecodeLinuxZeroCopyGL,AcceleratedVideoDecodeLinuxGL,AcceleratedVideoEncoder

# Brave
super + c
        chromium --enable-features=AcceleratedVideoDecodeLinuxZeroCopyGL,AcceleratedVideoDecodeLinuxGL,AcceleratedVideoEncoder

# Thunar
super + e
        thunar

# Rofi
super + d
        rofi -show drun

# Screenshot
Print
        flameshot gui

### BSPWM KEYBINDINGS ###

super + {1-9,0}
    bspc desktop -f ^{1-9,10}

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill windows
super + q
	bspc node -c
# Move window to selected desktop
super + shift + {1-9,0}
	bspc node --to-desktop ^{1-9,10} --focus

# Switch Active Workspaces
alt + {Tab, shift + Tab}
	bspc {desktop next.occupied -f, desktop prev.occupied -f}

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the node in the given direction
super + {_, shift + }{Left, Down, Up, Right}
	bspc node -{f,s} {west,south,north,east}

# Shrink window width both sides
super + shift + h
	bspc node -z right -40 0; bspc node -z left -40 0

# Expand window width both sides
super + shift + l
	bspc node -z right 40 0; bspc node -z left 40 0

# Resize Window: Expand Down
super + shift + j
	bspc node -z top 0 40; bspc node -z bottom 40 0

# Resize Window: Shrink Up
super + shift + k
	bspc node -z top 0 -40; bspc node -z bottom -40 0

# Toggle float and tile
super + space
    bspc node -t '~floating'

# System keys
XF86AudioLowerVolume
	pamixer -u && pamixer -d 5
XF86AudioRaiseVolume
	pamixer -u && pamixer -i 5
XF86AudioMute
	pamixer -t

# Clipboard history
super + v
    clipcat-menu --rofi-menu-length=9
